.row#my-work-show
  .col-sm-8.remove-right-padding.my-work-show-col
    %div.tabbable.tabs-left{:role => "tabpanel"}
      .row
        / Nav tabs
        .col-sm-2#my-work-show-left-tabs
          %ul.nav{:role => "tablist"}
            - active = true
            %li{:role => "presentation",class: "#{active ? 'active' : ''}"}
              - @pictures.each do |pic|
                .my-work-thumbnails
                  %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "##{pic.name_id}", :role => "tab"}
                    %img.picture-ajax.thumbnail-img{data: {id: "#{pic.id}", size: 'thumbnail'}}
                    - active = false
        / Tab panes
        .col-sm-10.hidden-xs
          .tab-content
            - active = true
            - @pictures.each do |pic|
              .tab-pane{class: "#{active ? 'active' : ''}", :role => "tabpanel", id: "#{pic.name_id}"}
                .my-work-main-image.img-responsive
                  %img.picture-ajax{data: {id: "#{pic.id}", size: 'large'}}
                  - active = false
  .col-sm-4.remove-right-padding.my-work-show-col
    #my-work-show-info
      - if current_user && current_user.admin?
        .dropdown.pull-right
          %a.no-hover-effects{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            %span.glyphicon.glyphicon-cog.tf-options{"aria-hidden" => "true"}
          %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
            %li
              = link_to 'Edit', edit_my_work_path(@my_work)
            %li
              = link_to 'Destroy', @my_work, method: :delete, data: { confirm: 'Are you sure? I can NOT undo this.' }
      %div.text-center
        %h3.text-center.remove-top-margin
          = @my_work.title
      - if @my_work.tags.length > 0
        %p.text-center
          - @my_work.tags.split(' ').each do |tag|
            %span.badge= tag
      - if @my_work.description.length > 0
        %p
          %b Description:
          = @my_work.description