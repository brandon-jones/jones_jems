#my-work-show-info
  - if current_user && current_user.admin?
    .dropdown.pull-right
      %a.no-hover-effects{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        %span.glyphicon.glyphicon-cog.tf-options{"aria-hidden" => "true"}
      %ul.dropdown-menu{"aria-labelledby" => "dLabel", :role => "menu"}
        %li
          = link_to 'Edit', edit_my_work_path(@my_work)
        %li
          = link_to 'Destroy', @my_work, method: :delete, data: { confirm: 'Are you sure? I can NOT undo this.' }
  %div.text-center
    %h3.text-center.remove-top-margin
      = @my_work.title
  - if @my_work.tags.length > 0
    %p.text-center
      - @my_work.tags.split(' ').each do |tag|
        %span.badge= tag
  - if @my_work.description.length > 0
    %p
      %b Description:
      = @my_work.description