.row
  .col-sm-8.col-sm-offset-2.round-corners.main-container
    %p
      %strong Email:
      = @user.email
      %br
      %strong Receive Emails:
      = @user.receive_emails
    - if current_user && (current_user.admin? || current_user == @user)
      = link_to 'Edit', edit_user_path(@user), class: 'btn btn-xs btn-blue'
    |
    = link_to 'Back', last_path, class: 'btn btn-xs btn-purple'