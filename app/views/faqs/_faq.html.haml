- @faqs.each do |faq|
  %span.faq-goto{id: "question-#{faq.id}"}
  .row.faq-question
    .col-sm-11
      %strong
        Q
      = faq.question
    .col-sm-1
      - if current_user && current_user.admin?
        .btn-group
          %button.btn.btn-default.btn-xs.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button"}
            Admin
            %span.caret
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to 'Edit', edit_faq_path(faq.id)
            %li.divider
            %li
              = link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' }
  .row.faq-answer
    .col-sm-12
      %p
        %strong
          A
        = faq.answer
  %br