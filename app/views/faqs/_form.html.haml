= form_for @faq do |f|
  - if @faq.errors.any?
    #error_explanation
      %h2= "#{pluralize(@faq.errors.count, "error")} prohibited this faq from being saved:"
      %ul
        - @faq.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :question
    = f.text_field :question, class: 'form-control'
  .field.form-group
    = f.label :answer
    = f.text_area :answer, class: 'form-control faq-edit-answer'
  .actions
    = f.submit 'Save'
